<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Celebration" Class="mr-3" /> Welcome to Multi-Diary!
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>Select a folder to create your diary file in or a folder that contains an existing "multi-diary.txt" file to use.</MudText>
        <FilePreferences OnDiarySelected="Submit" StartingDialog="true" />
    </DialogContent>
</MudDialog>

@code {
    /// <summary>
    /// Needed to use MudBlazor dialogs.
    /// </summary>
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    /// <summary>
    /// Dialog closed as complete.
    /// </summary>
    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Celebration" Class="mr-3" /> Welcome to Multi-Diary!
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>Welcome to Multi-Diary! Select a folder to create your diary file or a folder that contains an existing "multi-diary.txt" file.</MudText>
        <FilePreferences />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
